{
	"name": "todoist-ai-tools",
	"version": "0.0.1",
	"type": "module",
	"main": "dist/main.js",
	"files": ["dist", "src", "package.json", "LICENSE.txt", "README.md"],
	"exports": {
		".": "./dist/main.js",
		"./tools": "./dist/tools/index.js"
	},
	"license": "MIT",
	"description": "A collection of tools for Todoist using AI",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/doist/todoist-ai-tools.git"
	},
	"keywords": ["todoist", "ai", "tools"],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "rimraf dist && tsc",
		"dev": "npm run build && npx @modelcontextprotocol/inspector npx node dist/main.js",
		"setup": "cp .env.example .env && npm install && npm run build",
		"type-check": "tsc --noEmit",
		"biome:sort-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write .",
		"lint:check": "biome lint",
		"lint:write": "biome lint --write",
		"format:check": "biome format",
		"format:write": "biome format --write",
		"check": "biome check",
		"check:fix": "biome check --fix --unsafe",
		"prepare": "husky"
	},
	"dependencies": {
		"@doist/todoist-api-typescript": "^4.0.4",
		"@modelcontextprotocol/sdk": "^1.11.1",
		"date-fns": "^4.1.0",
		"dotenv": "^16.5.0",
		"zod": "^3.25.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.15.17",
		"husky": "^9.1.7",
		"lint-staged": "^16.0.0",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	},
	"lint-staged": {
		"*": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
